@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<button @onclick="GoogleLogin" id="btnSignIn" class="rounded-pill btn btn-light border d-flex align-items-center gap-2 px-4 py-2 shadow-sm">
    <img src="/Resources/google_icon_64dp.png" width="22" height="22">
    <span>Đăng nhập với Google</span>
</button>

@code {
    [Inject]
    IJSRuntime JS {
        get; set;
    }

    private async Task GoogleLogin() {
        var result = await JS.InvokeAsync<object>("window.signInWithGooglePopup");

        if (result != null) {
            Console.WriteLine("Đăng nhập thành công!");
        } else {
            Console.WriteLine("Đăng nhập thất bại hoặc bị huỷ.");
        }
    }
}